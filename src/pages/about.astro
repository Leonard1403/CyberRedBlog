---
import BaseLayout from '../layouts/Base.astro';
import { SITE_TITLE } from '../consts';

const pageTitle = 'About me';
---

<BaseLayout title={pageTitle}>
  <section class="about">
    <h1>Despre mine</h1>
    <p>
      Salut! Sunt <strong>Leo</strong> — masterand în <em>Cybersecurity</em> la Universitatea Babeș-Bolyai (EIT Digital).
      Sunt pasioneat de <strong>Red Team & Penetration Testing</strong>, rețelele și <strong>reverse engineering</strong>.
      Învăț constant și încerc să public write-up-uri de pe TryHackMe, HackTheBox și alte CTF-uri.
    </p>

	<div class="badges">
  <h2>TryHackMe</h2>

  <div class="thm-wrap">
    <div class="thm-card">
      <div class="thm-crop">
        <iframe
          class="thm-frame"
          src="https://tryhackme.com/api/v2/badges/public-profile?userPublicId=592680"
          title="TryHackMe profile"
          loading="lazy"
          scrolling="no"
        ></iframe>
      </div>
    </div>
  </div>
</div>
  </section>

  <style>
    .about h1 { margin-bottom: .25rem; }
    .about p { color: rgb(var(--gray)); }

    .badges h2 { margin-top: 1.5rem; margin-bottom: .5rem; color: rgb(var(--gray-dark)); }
    .thm-embed { margin: .75rem 0 1.25rem; }

    /* === Fix iframe THM === */
.thm-wrap {
  display: flex;
  justify-content: center;
}

/* card mai mic, cu fundal discret */
.thm-card {
  background: rgba(var(--gray-light), 0.16);
  border: 1px solid rgba(255,255,255,0.06);
  border-radius: 16px;
  padding: 8px;                 /* micșorează “dreptunghiul” */
  box-shadow: var(--box-shadow);
}

/* fereastra de decupare — aici controlăm mărimea finală */
.thm-crop {
  width: 436px;                 /* mai îngust = badge mai “sharp” */
  height: 106px;                /* taie exact partea albă */
  overflow: hidden;
  border-radius: 12px;
}

/* iframe-ul: îl “aliniem” în fereastră și mai masăm 1–2px jos */
.thm-frame {
  display: block;
  width: 436px;
  height: 200px;                /* orice > height-ul crop-ului e ok */
  border: 0;
  background: transparent;
  position: relative;
  top: -2px;                    /* ajustează -1 / -2 / -3 dacă mai vezi alb */
}

/* mobil: păstrează proporțiile fără să umfle imaginea */
@media (max-width: 540px) {
  .thm-card { padding: 6px; }
  .thm-crop {
    width: min(100%, 436px);
    aspect-ratio: 436 / 106;
    height: auto;
  }
  .thm-frame {
    width: 100%;
    height: 200px;
    top: -2px;
  }
}

    /* List bullets – culoare și aliniere mai ok în dark */

    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      margin: 1.5rem 0;
    }
    .card {
      background: rgba(var(--gray-light), 0.18);
      border: 1px solid rgba(255,255,255,0.06);
      border-radius: 12px;
      padding: 1rem;
      box-shadow: var(--box-shadow);
    }
    .card h3 { margin-top: 0; color: rgb(var(--gray-dark)); }
    .card ul { margin: .5rem 0 0 1rem; }
    .card li { margin: .25rem 0; }

    .cta a { color: var(--accent); }
    @media (max-width: 900px) { .grid { grid-template-columns: 1fr; } }
  </style>
</BaseLayout>
