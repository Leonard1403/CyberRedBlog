---
import BaseLayout from '../layouts/Base.astro';
import { SITE_TITLE } from '../consts';

const pageTitle = 'About me';
---

<BaseLayout title={pageTitle}>
  <section class="about">
    <h1>Despre mine</h1>
    <p>
      Salut! Sunt <strong>Leo</strong> — masterand în <em>Cybersecurity</em> la Universitatea Babeș-Bolyai (EIT Digital).
      Sunt pasioneat de <strong>Red Team & Penetration Testing</strong>, rețelele și <strong>reverse engineering</strong>.
      Învăț constant și încerc să public write-up-uri de pe TryHackMe, HackTheBox și alte CTF-uri.
    </p>

	<div class="badges">
  <h2>TryHackMe</h2>

  <div class="thm-wrap">
    <div class="thm-card">
      <div class="thm-crop">
        <iframe
          class="thm-frame"
          src="https://tryhackme.com/api/v2/badges/public-profile?userPublicId=592680"
          title="TryHackMe profile"
          loading="lazy"
          scrolling="no"
        ></iframe>
      </div>
    </div>
  </div>
</div>
  </section>

  <style>
    .about h1 { margin-bottom: .25rem; }
    .about p { color: rgb(var(--gray)); }

    .badges h2 { margin-top: 1.5rem; margin-bottom: .5rem; color: rgb(var(--gray-dark)); }
    .thm-embed { margin: .75rem 0 1.25rem; }

    /* === Fix iframe THM === */
.thm-wrap{
  display:flex;
  justify-content:center;
}

/* card compact */
.thm-card{
  display:inline-block;                 /* card-ul ia doar cât conținutul */
  padding:6px;                          /* mai mic decât 8px */
  background: rgba(var(--black), .35);  /* fundal mai închis, nu pare “pata” */
  border:1px solid rgba(255,255,255,.06);
  border-radius:16px;
  box-shadow: var(--box-shadow);
}

/* fereastra de decupare (CONTROL mărime finală) */
.thm-crop{
  width: 432px;     /* 428–438px după gust; mai mic => badge mai “sharp” */
  height: 98px;     /* TAIE albul. Dacă mai vezi: 97 → 96 */
  overflow: hidden;
  border-radius:12px;
}

/* poziționează conținutul badge-ului în fereastra de 98px */
.thm-frame{
  display:block;
  width: 432px;
  height: 180px;            /* orice > 98 e ok */
  border:0;
  background:transparent;
  transform: translateY(-14px);  /* ajustează: -12 / -15 dacă vrei */
}

/* mobil: menținem proporția fără upscaling */
@media (max-width:540px){
  .thm-card{ padding:5px; }
  .thm-crop{
    width: min(100%, 432px);
    aspect-ratio: 432 / 98;
    height: auto;
  }
  .thm-frame{
    width: 100%;
    height: 180px;
    transform: translateY(-12px);
  }
}

    /* List bullets – culoare și aliniere mai ok în dark */

    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      margin: 1.5rem 0;
    }
    .card {
      background: rgba(var(--gray-light), 0.18);
      border: 1px solid rgba(255,255,255,0.06);
      border-radius: 12px;
      padding: 1rem;
      box-shadow: var(--box-shadow);
    }
    .card h3 { margin-top: 0; color: rgb(var(--gray-dark)); }
    .card ul { margin: .5rem 0 0 1rem; }
    .card li { margin: .25rem 0; }

    .cta a { color: var(--accent); }
    @media (max-width: 900px) { .grid { grid-template-columns: 1fr; } }
  </style>
</BaseLayout>
