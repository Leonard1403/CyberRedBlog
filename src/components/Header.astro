---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
  <nav class="nav" aria-label="Primary">
    <a href="/" class="logo">{SITE_TITLE}</a>

    <ul class="menu" role="list">
      <li><HeaderLink href="/">Home</HeaderLink></li>
      <li><HeaderLink href="/blog/">Blog</HeaderLink></li>
      <li><HeaderLink href="/about/">About</HeaderLink></li>
    </ul>

    <div class="spacer" aria-hidden="true"></div>
  </nav>
</header>

<style>
  .nav {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }

  /* Logo la stânga, aspect curat */
  .logo {
    font-weight: 700;
    text-decoration: none;
    color: inherit;
    line-height: 1;
  }

  /* Meniu centrat perfect pe orizontală */
  .menu {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: .75rem;
    list-style: none;
    margin: 0;
    padding: 0;
    line-height: 1;
  }

  .menu a {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
  }

  .menu a:hover {
    color: var(--accent);
  }

  /* Spațiu „fantomă” în dreapta pentru echilibru (dacă vei adăuga acțiuni) */
  .spacer {
    width: 2.5rem;
    height: 1px;
  }

  /* Mobil: stivuim și centrăm totul */
  @media (max-width: 720px) {
    .nav {
      flex-direction: column;
      gap: .5rem;
    }
    .logo {
      align-self: center;
    }
    .menu {
      position: static;
      transform: none;
      justify-content: center;
    }
    .spacer {
      display: none;
    }
  }
</style>
