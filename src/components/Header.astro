---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav class="nav" aria-label="Primary">
    <a href="/" class="logo">{SITE_TITLE}</a>

    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/blog/">Blog</a></li>
      <li><a href="/about/">About</a></li>
    </ul>

    <div class="spacer"></div>
  </nav>
</header>

<style>
  .nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr; /* logo | meniu | (spacer gol) */
    align-items: center;
    padding: 1rem 0;
  }

  .logo {
    font-weight: 700;
    text-decoration: none;
    justify-self: start;
  }

  .menu {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
    justify-self: center; /* meniu centrat */
  }

  .menu a { text-decoration: none; }
  .spacer { /* gol inten»õionat pentru centrare */ }
</style>
