---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav class="nav" aria-label="Primary">
    <a href="/" class="logo">{SITE_TITLE}</a>

    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/blog/">Blog</a></li>
      <li><a href="/about/">About</a></li>
    </ul>

    <div class="spacer"></div>
  </nav>
</header>

<style>
  .nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1rem 0;
  }

  .logo {
    font-weight: 700;
    text-decoration: none;
    justify-self: start;
  }

  .menu {
    justify-self: center;
    display: flex;
    gap: .75rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu a {
    text-decoration: none;
  }

  .spacer {
    justify-self: end;
  }

  /* Responsive: pe mobil centrăm totul pe o singură coloană */
  @media (max-width: 720px) {
    .nav {
      grid-template-columns: 1fr;
      row-gap: .5rem;
    }
    .logo {
      justify-self: center;
    }
    .menu {
      justify-self: center;
    }
    .spacer {
      display: none;
    }
  }
</style>
